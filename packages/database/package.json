{
  "name": "@repo/database",
  "version": "0.0.0",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "build": "tsc --noEmit",
    "db:generate": "prisma generate --schema=prisma/global/schema.prisma && prisma generate --schema=prisma/tenant/schema.prisma",
    "db:migrate": "prisma migrate deploy --schema=prisma/global/schema.prisma",
    "db:migrate:dev": "prisma migrate dev --schema=prisma/global/schema.prisma",
    "db:migrate:tenant:dev": "prisma migrate dev --schema=prisma/tenant/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0"
  },
  "devDependencies": {
    "prisma": "^6.6.0",
    "typescript": "^5.7.0"
  }
}
